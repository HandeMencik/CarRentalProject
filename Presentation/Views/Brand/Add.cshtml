@model Entity.Concerete.Brand
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Marka Girişi</h3>

<form method="post" asp-controller="Brand" asp-action="Add">
    <label>Marka Adı</label>
    <input type="text" asp-for="BrandName" class="form-control" style="border:2px solid #2222" />
    <br/>
    <button class="btn btn-primary">Kaydet</button>
</form>

