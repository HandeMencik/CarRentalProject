@model Entity.Concerete.Brand
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Marka Güncelleme Sayfası</h3>
<form method="post" asp-controller="Brand" asp-action="Update">
    <input type="hidden" asp-for="BrandId" />
    <label>Marka Adı</label>
    <input type="text" asp-for="BrandName" class="form-control" style="border:1px solid #3407" />
    <br/>
    <button class="btn btn-success">Markayı Güncelle</button>

</form>
