@model List<Price>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araç Ödeme Planları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Araç</th>
        <th>Ödeme Planı</th>      
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PriceId</td>
            <td>@item.Car.Brand.BrandName @item.Car.Model</td>
            <td>@item.PriceType</td>
            <td>@item.PriceValue</td>
            <td><a href="/Price/Delete/@item.PriceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Price/Update/@item.PriceId" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>

<a href="/Price/Add/" class="btn btn-secondary">Yeni Ödeme Planı Girişi</a>

