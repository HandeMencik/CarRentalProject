@model Price
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Ödeme Planı Güncelleme</h3>

<form method="post" asp-controller="Price" asp-action="Update">
    <input type="hidden" asp-for="PriceId"/>
    <label>Araba</label>
    @Html.DropDownListFor(x => x.CarId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", @style = "border:2px solid #2222" })
    <br />
    <label>Ödeme Planı</label>
    <input type="text" asp-for="PriceType" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Tutarı Giriniz</label>
    <input type="text" asp-for="PriceValue" class="form-control" style="border:2px solid #2222" />
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>

